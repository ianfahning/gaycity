<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/couple"
        android:scaleType="centerCrop"
        android:padding="3dp"
        android:background="@color/black"
        android:contentDescription="@string/popup_content_description" />


    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/image"
        android:textColor="@color/black"
        android:background="@color/veryTransparentWhite"
        android:fontFamily="@font/rokkitt_bold"
        android:layout_alignLeft="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/x"
        android:background="@color/veryTransparentWhite"
        android:layout_alignRight="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_marginRight="8dp"
        android:layout_alignEnd="@id/image"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/popup_x_content_description" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@id/image"
        android:textColor="@color/black"
        android:fontFamily="@font/rokkitt_regular"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:cornerRadius="0dp"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp"
        android:layout_alignRight="@id/image"
        android:layout_alignBottom="@id/image"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/learn_more" />

</RelativeLayout>