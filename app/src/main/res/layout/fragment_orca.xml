<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_orca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.connect.ConnectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/gayCityDarkGreen"
        app:layout_constraintBottom_toTopOf="@+id/text_events"
        app:layout_constraintEnd_toEndOf="@+id/text_mission_statement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_donate" />

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:fontFamily="@font/rokkitt_bold"
        android:text="ORCA LIFT"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ORCA_description"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="17dp"
        android:fontFamily="@font/rokkitt_regular"
        android:text="Get more out of your public transportation system today with ORCA LIFT, a reduced-fare transit program. Whether traveling to work, school, or the mall, you can save money starting today.\n\nKing County Navigators are available by phone 8 a.m. to 6 p.m. and through online registration.\n\nLoad an e-purse value on your card to pay for trips one at a time, or load a discounted monthly pass that lets you take unlimited trips for an entire month."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_gallery" />

    <TextView
        android:id="@+id/ORCA_LIFT_cards_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="23sp"
        android:fontFamily="@font/rokkitt_bold"
        android:text="Where do ORCA LIFT cards work?"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ORCA_description" />
    <TextView
        android:id="@+id/ORCA_LIFT_cards_description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:fontFamily="@font/rokkitt_regular"
        android:text="• Metro Transit buses\n• Community Transit buses\n• Everett Transit buses\n• Kitsap Transit buses\n• Sound Transit Regional Express buses\n• Sound Transit Link light rail\n• Sounder Trains\n• King County Water Taxi\n• Seattle Streetcar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ORCA_LIFT_cards_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_College_ORCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="College Student Online Registration"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/rokkitt_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ORCA_LIFT_cards_description"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Non_College_ORCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Non-Student Online Registration"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/rokkitt_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_College_ORCA"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            android:fontFamily="@font/rokkitt_regular"
            android:text="Phone Registration:\n Call 1-800-756-5437 to register over the phone\n\nQuestions?\n Contact us at info@gaycity.org or 206-860-6969"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_Non_College_ORCA" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>