                app:layout_constraintTop_toBottomOf="@+id/four_description" />
            <TextView
                android:id="@+id/five_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do Your Research"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/five" />

            <TextView
                android:id="@+id/five_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You’re halfway there to completing the your preparation for the election. But, this is one of the biggest steps of them all – know what you’re voting for.
\n\nHere are some ways to research the candidates and the referendums:
\n\n• Vote411
\n• Ballotpedia
\n• Contact the candidates and their party to ask your questions
\n• Read articles from trusted media sources who cite their sources or have media that is moderately edited"
                android:fontFamily="@font/rokkitt_regular"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/five_title" />


            <TextView
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06"
                android:textColor="@color/gayCityGreen"
                android:textSize="40dp"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/five_description" />
            <TextView
                android:id="@+id/six_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow All Ballot Instructions"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
