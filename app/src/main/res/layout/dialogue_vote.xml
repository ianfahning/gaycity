<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_weight=".25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/gayCityDarkGreen"
                app:layout_constraintBottom_toTopOf="@+id/text_events"
                app:layout_constraintEnd_toEndOf="@+id/text_mission_statement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_donate" />

            <TextView
                android:id="@+id/text_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="30sp"
                android:fontFamily="@font/rokkitt_bold"
                android:text="10 WAYS TO PREPARE FOR AN ELECTION"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/vision_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are ten ways to prepare for any upcoming election. The tips may differ depending on the city, county and state where you live, so we have included some national resources for those that live outside King County (Washington State).
\n\nIf at any point you need help (accessibility concerns or otherwise), contact your local elections office for help:
\n\n• King County (WA): 206-296-vote
\n• United States: 1-866-OUR-VOTE or 888-VE-Y-VOTA.
\n\nPlease share any election preparation tips you have to communications@gaycity.org."
                android:fontFamily="@font/rokkitt_regular"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@color/gayCityGreen"
                android:textSize="40dp"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vision_description" />

            <TextView
                android:id="@+id/one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you Eligible to Vote?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/one" />

            <TextView
                android:id="@+id/one_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To register to vote in the state of Washington, you must be:
\n\n• A citizen of the United States
\n• A legal resident of Washington state for at least 30 days prior to election day
\n• At least 18 years old by election day
\n• Not disqualified from voting due to a court order
\n• Not under Department of Corrections supervision for a Washington felony conviction
\n\nNot 18 years old?
\n\nIf you meet all of the requirements, except you’re 16 or 17, you can pre-register to vote. Your registration will be held by the elections office until you become eligible to vote."
                android:fontFamily="@font/rokkitt_regular"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/one_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voter Elgibility"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:fontFamily="@font/rokkitt_regular"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/one_description"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp"/>

            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02"
                android:textColor="@color/gayCityGreen"
                android:textSize="40dp"
                android:fontFamily="@font/rokkitt_bold"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
